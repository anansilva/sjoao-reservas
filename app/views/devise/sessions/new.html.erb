<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3 form-outline field">
      <%= f.label :email, class: "form-label"  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3 form-outline field">
      <%= f.label :password, class: "form-label"  %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
